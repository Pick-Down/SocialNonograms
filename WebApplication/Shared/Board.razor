@using SN.Model
<div>
    <table style="margin-left: auto; margin-right: auto;">
        @for (int row = 0; row < BoardModel.FullBoard.GetLength(0); row++)
        {
            <tr>
                @for (int col = 0; col < BoardModel.FullBoard.GetLength(1); col++)
                {
                    <td class="@BoardModel.FullBoard[row,col].ToString()">
                        <div class="content" style="width: 100%; height: 100%;">
                            @BoardModel.FullBoard[row, col].Content
                        </div>
                    </td>
                }
            </tr>
        }
    </table>
</div>

@code {

    [Parameter]
    public BoardModel BoardModel { get; set; }

    private int _boardMaxWidth = 75;
    private int _boardMaxHeight = 75;

    public int GetBoardWidth(int rows, int cols)
    {
        if (rows > cols)
            return _boardMaxWidth;
        return rows / cols * _boardMaxWidth;
    }

    public int GetBoardHeight(int rows, int cols)
    {
        if (cols > rows)
            return _boardMaxHeight;
        return rows / cols * _boardMaxWidth;
    }
}